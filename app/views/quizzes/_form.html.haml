= form_for(@quiz) do |f|
  - if @quiz.errors.any?
    #error_explanation
      %h2
        = pluralize(@quiz.errors.count, "error")
        prohibited this quiz from being saved:
      %ul
        - @quiz.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :answer
    %br/
    = f.text_field :answer
  .field
    = f.label :score
    %br/
    = f.number_field :score
  .actions
    = f.submit
